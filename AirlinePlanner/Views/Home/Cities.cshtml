@{
  Layout = "_Layout";
}

<p><a href="/">Home</a></p>
<p><a href="/flights">View all flights</a></p>
<p><a href="/flights/new">Add new flight</a></p>
<p><a href="/cities">View all cities</a></p>
<p><a href="/cities/new">Add new city</a></p>



<h1>Airline Planner</h1>

<h2>Cities: </h2>
@if (Model.Count !=0)
{
  <ul>
    @foreach (var city in Model)
    {
      <li><a href='/cities/@city.GetId()'>@city.GetName()</a></li>
    }
  </ul>
}
